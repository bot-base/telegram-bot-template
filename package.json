{
  "name": "telegram-bot-template",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "description": "Telegram bot starter template",
  "imports": {
    "#root/*": "./build/src/*"
  },
  "author": "deptyped <deptyped@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "lint": "eslint .",
    "format": "eslint . --fix",
    "typecheck": "tsc",
    "build": "tsc --noEmit false",
    "dev": "tsc-watch --onSuccess \"tsx ./src/main.ts\"",
    "start": "tsc && tsx ./src/main.ts",
    "start:force": "tsx ./src/main.ts",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@grammyjs/auto-chat-action": "0.1.1",
    "@grammyjs/hydrate": "1.4.1",
    "@grammyjs/i18n": "1.0.2",
    "@grammyjs/parse-mode": "1.10.0",
    "@grammyjs/runner": "2.0.3",
    "@grammyjs/types": "3.11.1",
    "@hono/node-server": "1.12.0",
    "callback-data": "1.1.1",
    "grammy": "1.27.0",
    "grammy-guard": "0.5.0",
    "hono": "4.5.2",
    "iso-639-1": "3.1.2",
    "pino": "9.3.2",
    "pino-pretty": "11.2.2",
    "tsx": "4.16.5",
    "valibot": "0.36.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "2.24.1",
    "@types/node": "^20.14.12",
    "eslint": "^9.7.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.ts": "eslint"
  }
}
